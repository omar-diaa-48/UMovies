
@model UMovies.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>

    <li>Genre : @Model.Genre</li>
    <li>Release Date : @Model.ReleaseDate.Value.Date.DayOfWeek, @Model.ReleaseDate.Value.Date.ToShortDateString()</li>
    <li>Date Added : @Model.DateAdded.Value.Date.DayOfWeek, @Model.DateAdded.Value.Date.ToShortDateString()</li>
    <li>Number in stock : @Model.NumberInStock</li>
</ul>

