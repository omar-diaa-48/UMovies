
@model UMovies.ViewModels.CustomerMembershipTypesViewModel

@{
    ViewBag.Title = "Add Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewCustomer</h2>

@using (Html.BeginForm("NewCustomer", "Customers", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.EditorFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.EditorFor(m => m.Customer.BirthDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "form-control" })
        @Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeID)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeID, new SelectList(Model.MembershipTypes, "Id", "Name" ), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>

}

@Html.ActionLink("Back to list of customers", "Index")

