
@model UMovies.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

@if (Model == null)
{
    <p>Something wrong about this customers details</p>
}
else
{
    <h1>@Model.Name</h1>
    <br />
    <ul>
        <li><h3>@Model.MembershipType.Name</h3></li>
        @if(Model.BirthDate != null)
        {
            <li><h3>@Model.BirthDate</h3></li>
        }
    </ul>
}

